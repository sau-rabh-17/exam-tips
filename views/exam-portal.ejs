    <link rel="stylesheet" href="/styles/footer.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />
    <style>
        .subjects-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            padding: 20px;
            max-width: 1200px;
            margin: 0 auto;
        }
        .subject-card {
            background: #fff;
            border-radius: 10px;
            padding: 20px;
            text-align: center;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }
        .subject-card:hover {
            transform: translateY(-5px);
        }
        .subject-card h3 {
            color: #333;
            margin-bottom: 10px;
        }
        .subject-card p {
            color: #666;
            margin-bottom: 15px;
        }
        .take-test-btn {
            background: #4CAF50;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background 0.3s ease;
        }
        .take-test-btn:hover {
            background: #45a049;
        }
        .page-title {
            text-align: center;
            padding: 40px 0;
            color: #333;
        }
    </style>
</head>
<body>
    <header>
        <h1 class="logo-top">EXAM TIPS</h1>
        <nav class="navbar">
            <a href="/" class="active">Home</a>
