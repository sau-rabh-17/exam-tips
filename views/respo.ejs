  <main>
    

    <div class="create-repo-container">
      <h3>Create New Repository</h3>
      <form action="/erepo/create-repo" method="POST">
        <div class="form-group">
          <label>Repository Name</label>
          <input type="text" name="repo_name" required placeholder="My Awesome Project">
        </div>
        <div class="form-group">
          <label>Description (optional)</label>
          <textarea name="description" placeholder="Describe your repository"></textarea>
        </div>
        <div class="form-group">
          <label>
            <input type="checkbox" name="is_readme">
            Initialize with README
          </label>
        </div>
        <button type="submit" class="btn-create">Create Repository</button>
      </form>
    </div>

    <section class="repositories">
        <h2>My Repositories</h2>
        <div class="repo-list">
          <% if (repositories && repositories.length > 0) { %>
            <% repositories.forEach(function(repo) { %>
              <div class="repo-item">
                <h3><%= repo.repo_name %></h3>
                <p>By <strong><%= repo.user_name %></strong></p>
                <p><%= repo.description || "No description provided." %></p>
                <p><strong>Initialized with README:</strong> <%= repo.is_readme ? "Yes" : "No" %></p>
                <p><small>Created on: <%= repo.created_at %></small></p>
              </div>
            <% }) %>
          <% } else { %>
            <p>You have no repositories yet. Create one now!</p>
          <% } %>
        </div>
      </section>

  </main>

