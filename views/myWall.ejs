<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Profile</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

    <style>
        .container {
            max-width: 1200px;
            margin: 40px auto;
            padding: 0 20px;

            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 25px;
        }

        body {
            margin: 0;
            font-family: 'Poppins', sans-serif;
            background: #0f172a;
            color: #e2e8f0;
        }

        /* Header */
        header {
            background: #1e293b;
            padding: 18px 40px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid #334155;
        }

        header h1 {
            margin: 0;
            font-size: 26px;
            font-weight: 600;
        }

        nav a {
            margin-left: 20px;
            text-decoration: none;
            color: #a78bfa;
            font-weight: 500;
        }

        nav a:hover {
            color: #c4b5fd;
            text-decoration: underline;
        }

        /* Layout */
        .container {
            max-width: 80%;
            margin: 40px auto;
            padding: 0 20px;

            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(330px, 1fr));
            gap: 25px;
        }

        /* Card */
        .card {
            background: #1e293b;
            padding: 25px;
            border-radius: 14px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.4);
            transition: 0.25s ease;
        }

        .card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.5);
        }

        .card h2 {
            margin: 0 0 15px 0;
            color: #a78bfa;
            font-size: 22px;
        }

        .repo-card,
        .result-card {
            background: #334155;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 12px;
            transition: 0.2s;
        }

        .repo-card:hover,
        .result-card:hover {
            background: #475569;
        }

        hr {
            border: 0;
            border-top: 1px solid #334155;
            margin: 20px 0;
        }

        .empty-text {
            color: #94a3b8;
            font-size: 0.9rem;
            margin-top: 5px;
        }

        .date {
            margin-top: 5px;
            font-size: 0.8rem;
            color: #94a3b8;
        }
    </style>
</head>

<body>

    <!-- Header -->
    <header>
        <h1>My Profile</h1>
        <nav>
            <a href="/">Home</a>
            <a href="/erepo">e-Repository</a>
            <a href="/exam-portal">Exam Portal</a>
            <a href="/logout">Logout</a>
        </nav>
    </header>

    <!-- Main Grid -->
    <div class="container">

        <!-- USER CARD — Full Width -->
        <div class="card" style="grid-column: 1 / -1;">
            <h2>Profile Details</h2>
            <p><strong>Name:</strong>
                <%= user.name %>
            </p>
            <p><strong>Email:</strong>
                <%= user.email %>
            </p>
        </div>

        <!-- REPOSITORIES CARD — Half Width -->
        <div class="card">
            <h2>Your Repositories</h2>

            <% if (repos.length===0) { %>
                <p class="empty-text">No repositories yet.</p>
                <% } else { %>
                    <% repos.forEach(r=> { %>
                        <div class="repo-card">
                            <h3>
                                <%= r.repo_name %>
                            </h3>
                            <p>
                                <%= r.description %>
                            </p>
                            <div class="date">Created on: <%= new Date(r.created_at).toLocaleDateString() %>
                            </div>
                        </div>
                        <% }) %>
                            <% } %>
        </div>

        <!-- EXAM RESULTS CARD — Half Width -->
        <div class="card">
            <h2>Your Exam Results</h2>

            <% if (results.length===0) { %>
                <p class="empty-text">No exam results yet.</p>
                <% } else { %>
                    <% results.forEach(e=> { %>
                        <div class="result-card">
                            <h3>
                                <%= e.language %> Exam
                            </h3>
                            <p>Score: <%= e.score %> / <%= e.total_questions %>
                            </p>
                            <p>Percentage: <%= e.percentage %>%</p>
                            <div class="date">Taken: <%= new Date(e.timestamp).toLocaleDateString() %>
                            </div>
                        </div>
                        <% }) %>
                            <% } %>
        </div>

    </div>


</body>

</html>